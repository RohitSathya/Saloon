<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner_video_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/video_types" />

        <Spinner
            android:id="@+id/spinner_content_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/content_types" />

        <Spinner
            android:id="@+id/spinner_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/genres" />

        <Spinner
            android:id="@+id/spinner_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/sources" />

        <Spinner
            android:id="@+id/spinner_language_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/languages"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/spinner_channel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/channel_names" />
        <Spinner
            android:id="@+id/spinner_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/categories" />

        <Button
            android:id="@+id/button_choose_channel_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Channel Logo" />

        <EditText
            android:id="@+id/edit_text_video_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Video ID" />

        <EditText
            android:id="@+id/edit_text_video_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Video Link" />

        <EditText
            android:id="@+id/edit_text_video_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Video Name" />

        <EditText
            android:id="@+id/edit_text_episode_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Episode Number"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edit_text_thumbnail_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thumbnail Link (Optional)" />

        <EditText
            android:id="@+id/edit_text_video_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Video Price"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_choose_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Thumbnail" />

        <Button
            android:id="@+id/button_choose_series_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Series Thumbnail"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_upload_trailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Trailer"
            android:visibility="gone" />
        <Button
            android:id="@+id/button_upload_sample_image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Sample Image 1"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_upload_sample_image2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Sample Image 2"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_upload_sample_image3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Sample Image 3"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload" />


    </LinearLayout>
</ScrollView>
