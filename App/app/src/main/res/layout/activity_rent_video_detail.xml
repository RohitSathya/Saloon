<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#000000">

    <!-- Video Thumbnail -->
    <ImageView
        android:id="@+id/imageViewThumbnail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="Video Thumbnail" />

    <!-- Video Title -->
    <TextView
        android:id="@+id/textViewVideoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video Title"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <!-- Button Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <!-- Play Button -->
        <Button
            android:id="@+id/buttonPlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Watch Now"
            android:textColor="@color/white"
            android:backgroundTint="#A020F0"
            android:padding="8dp" />

        <!-- Download Button -->
        <ImageButton
            android:id="@+id/buttonDownload"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/circular_button_background"
            android:padding="8dp"
            android:src="@drawable/ic_download"
            android:contentDescription="Download"
            app:tint="#FFFFFF" />

        <!-- Watchlist Button -->
        <ImageButton
            android:id="@+id/buttonWatchlist"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/circular_button_background"
            android:padding="8dp"
            android:src="@drawable/ic_add"
            android:contentDescription="Watchlist"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Category and Language -->
    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category: womenhaircut"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/textViewLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Language: Haircut"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:paddingBottom="16dp"/>
    <TextView
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Language: Haircut"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:paddingBottom="16dp"/>
    <TextView
        android:id="@+id/t4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Language: Haircut"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:paddingBottom="16dp"/>
    <TextView
        android:id="@+id/t5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Language: Haircut"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:paddingBottom="16dp"/>
</LinearLayout>
